---
import SocialIcon from '@/components/social-icons/index.astro';
import {SITE_METADATA} from '@/consts';
import Link from "./Link.astro";
---

<footer>
    <div class="mt-16 flex flex-col items-center">
        <div class="mb-3 flex space-x-4">
            <!-- <SocialIcon kind="mail" href={`mailto:${SITE_METADATA.email}`} size={6}/> -->
            <SocialIcon kind="github" href={SITE_METADATA.github} size={6} target="_blank"/>
           <!-- <SocialIcon kind="facebook" href={SITE_METADATA.facebook} size={6}/> -->
           <!-- <SocialIcon kind="youtube" href={SITE_METADATA.youtube} size={6}/> -->
            <SocialIcon kind="linkedin" href={SITE_METADATA.linkedin} size={6} target="_blank"/>
            <SocialIcon kind="instagram" href={SITE_METADATA.instagram} size={6} target='_blank'/>
            <!-- <SocialIcon kind="twitter" href={SITE_METADATA.twitter} size={6} target="_blank"/> -->
            <!-- <SocialIcon kind="link" href="/links" size={10} /> -->
            <SocialIcon kind="buymeacoffee" href={SITE_METADATA.buymeacoffee} size={6} target="_blank"/>

        </div>
        <div class="mb-2 flex space-x-2 text-sm text-gray-500 dark:text-gray-400">
            <Link href="/about">{SITE_METADATA.author}</Link>
            <div>{` • `}</div>
            <div>{`© ${new Date().getFullYear()}`}</div>
            <div>{` • `}</div>
            <Link href="/">{SITE_METADATA.title}</Link>
        </div>
        <div class="mb-8 text-sm text-gray-500 dark:text-gray-400">
            <p class="text-center">
                My blog is  open source, built with Astro, and is typeset in Inter.
            </p>
                <p class="text-center">
                    View
                        <Link href={SITE_METADATA.siteRepo}>
                            <span class="underline">the source code</span>
                        </Link>
                    on GitHub.
                </p>
        </div>
    </div>
</footer>
